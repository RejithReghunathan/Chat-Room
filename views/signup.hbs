<script>
    $("#signup").submit(function (e) {
        e.preventDefault(); // prevent actual form submit
        var form = $(this);
        var url = form.attr('action'); //get submit url [replace url here if desired]
        console.log('ethiyalloo')
        $.ajax({
            method: "POST",
            url: url,
            data: form.serialize(), // serializes form input
            success: function (response) {
                
                    console.log('respiii',response);
                    if(response.emailExists){
                        document.getElementById('error').innerHTML ='Sorry, email is already taken'                        
                    }else if(response.usernameExists){
                        console.log('avideyethi')
                        document.getElementById('error').innerHTML ='Sorry, username is already taken'
                    }else if(response.emailAndUsernameExists){
                        document.getElementById('error').innerHTML ='Sorry, email and username are already taken'     
                    }else{
                        window.location.href = "/"
                    }                  
            }
        });
    });
</script>